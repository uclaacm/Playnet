{
  "extends": "stylelint-config-standard",
  "ignoreFiles": [
    "**/*.ts",
    "**/*.tsx",
    "dist/*",
    "node_modules/*"
  ],
  "rules": {
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "export"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "carousel_padding_px",
          "carousel_button_px",
          "carousel_content_margin_px",
          "fit_carousel_width_percent"
        ]
      }
    ]
  }
}